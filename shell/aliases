# Swap files
function swap()         
{
  if [ $# -ne 2 ]; then
    echo "Usage: swap file1 file2"
  else
    local TMPFILE=$(mktemp)
    mv "$1" $TMPFILE
    mv "$2" "$1"
    mv $TMPFILE "$2"
  fi
} 

# Makedir and go
function mkrdirgo()
{
    if [ $# -ne 1; ]; then
        echo "Usage: mkdirgo file"
    else
        mkdir -p "$1"
        cd !$
    fi
}

# Go up cd
function op
{
  num = $1
  if [ $num -eq 0 ]; then
    num = 1
  fi
  while [ $num -ne 0  ];do
    cd ..
    num = $( expr $num - 1   )
  done
}

function adb_wifi()
{
    adb tcpip 5555;
    sleep 2
    ip_device=`adb shell ifconfig wlan0 | grep -e 'inet addr' | cut -d : -f2 | cut -d ' ' -f1`
    adb connect $ip_device
}
